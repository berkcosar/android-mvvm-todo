<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="actions"
            type="info.tuver.todo.ui.todo.todoTagSelect.TodoTagSelectAdapterActions" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/content_spacing_quarter"
        android:layout_marginRight="@dimen/content_spacing_quarter"
        android:onClick="@{() -> actions.onCreateNewTagButtonClicked()}">

        <TextView
            style="@style/Text.Metadata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/content_spacing_half"
            android:layout_marginTop="@dimen/content_spacing_quarter"
            android:layout_marginRight="@dimen/content_spacing_half"
            android:layout_marginBottom="@dimen/content_spacing_quarter"
            android:text="@string/todo_tag_select_create"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>