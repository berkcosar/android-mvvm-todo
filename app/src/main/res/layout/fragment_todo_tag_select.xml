<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="info.tuver.todo.ui.todo.todoTagSelect.TodoTagSelectFragmentViewModel" />

    </data>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_todo_tag_select_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:paddingStart="@dimen/content_spacing_half"
        android:paddingEnd="@dimen/content_spacing_half"
        android:paddingBottom="@dimen/content_spacing"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:itemCount="5"
        tools:listitem="@layout/item_todo_tag" />

</layout>